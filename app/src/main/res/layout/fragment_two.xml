<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageQr"
            android:layout_width="match_parent"
            android:layout_height="300dp"

            />

        <include
            android:id="@+id/vh_input"
            layout="@layout/vh_custominfo" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_sum"
            android:textColor="@color/primaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_sum"
                android:drawablePadding="@dimen/dimen8dp"
                android:drawableLeft="@drawable/ic_group_add"
                style="@style/Base.Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:hint="@string/sumpeople" />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/btnTwoPage"
            android:layout_gravity="center"
            android:text="check Bro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>